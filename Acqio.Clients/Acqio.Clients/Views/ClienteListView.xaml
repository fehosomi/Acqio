<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Acqio.Clients.Views.ClienteListView"
             Title="Lista de Clientes">
  <StackLayout Padding="20" Spacing="20" >
    <ListView x:Name="lvwCliente" ItemSelected="OnSelection" >
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding NomeFantasia}" Detail="{Binding Endereco}" ></TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>